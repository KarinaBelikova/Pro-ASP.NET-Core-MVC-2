@model Product[]
@{
    Layout = "_BasicLayout";
    ViewBag.Title = "Product Name";
}

<table>
    <thead>
        <tr><td>Name</td><td>Price</td></tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
        <tr>
            <td>@p.Name</td>
            <td>@($"{p.Price:C2}")</td>
        </tr>            
        }
    </tbody>    
</table>